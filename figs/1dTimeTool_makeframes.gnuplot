## Last datafile plotted: "amox28216_r93_step80_image120.dat"
#    EOF
set origin 0,0
set size 1,1
file_exists(file) = system("[ -f '".file."' ] && echo '1' || echo '0'") + 0
set xrange [0:1024]
set yrange [476:506]
set log cb
set cbrange [1:100]
unset colorbox
filelist = system("ls ./data_fs/raw/amox28216_r94_step[1-9][0-9]_image*.dat")
outdir = './figs/2dTimeTool_frames_new/'
unset xtics
unset ytics
i=-1
do for [filename in filelist]{
	i = i + 1
	outname = sprintf('%s%s1d_image%04i.png',outdir,'amox28216_r94_',i)
	print(outname)
	set view map
	set term png size 800,200
	set output outname
	splot filename mat u 1:2:(($3/1e3)**2) every :::486::496 notitle
}

# Create movie with mencoder
ENCODER = system('which mencoder');
if (strlen(ENCODER)==0) print '=== mencoder not found ==='; exit
CMD = 'mencoder mf://figs/2dTimeTool_frames_new/amox28216_r94_1d_image*.png -mf fps=10:type=png -ovc lavc -lavcopts vcodec=mpeg4:mbd=2:trell -oac copy -o ./figs/movie_1dTimeTool_amox28216_r94.avi'
system(CMD)

